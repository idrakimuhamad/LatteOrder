<link href="http://d2v52k3cl9vedd.cloudfront.net/basscss/4.2.2/basscss.min.css" rel="stylesheet">
<style>
  .hidden {
    display: none;
  }
</style>
<div class="demo-page py4">
  <div class="container">
    <h3 class="m0 mb2">Demo</h3>
    <ol>
      <li>
        <h4>Get the closest restaurant from your current location</h4>
        <div class="py2">
          <a href="#" class="button button-gray demo-restaurant mb2">Get Me the Restaurant Now!</a>
          <div class="restaurant-result hidden px2 py2 bg-light-gray"></div>
        </div>
      </li>
      <li>
        <h4>Get the list of menu</h4>
        <div class="py2">
          <p>The category are preselected.</p>
          <a href="#" class="button button-gray demo-menus mb2">Show me the menus for Espresso Beverages which is cold</a>
          <div class="menus-result hidden px2 py2 bg-light-gray"></div>
        </div>
      </li>
      <li>
        <h4>Order Something</h4>
        <div class="py2">
          <p>You are about to order a Iced Caramel Macchiato, Asian Dolce Latte and Espresso Con Panna</p>
          <input type="text" class="user" placeholder="Please enter your email or phone number for order">
          <a href="#" class="button button-gray demo-order mb2">Order for me Now!</a>
          <div class="order-result hidden px2 py2 bg-light-gray"></div>
        </div>
      </li>
      <li>
        <h4>Update an Order</h4>
        <div class="py2">
          <p>Don't forget to get the order number above!</p>
          <input type="text" class="order-number" placeholder="Please enter the order number">
          <a href="#" class="button button-gray demo-status mb2">Change this order status to Paid</a>
          <div class="status-result hidden px2 py2 bg-light-gray"></div>
        </div>
      </li>
      <li>
        <h4>Lookup for customer's order history</h4>
        <div class="py2">
          <input type="text" class="user-history" placeholder="Please enter customer email or phone number">
          <a href="#" class="button button-gray demo-history mb2">Get this customer order history</a>
          <div class="history-result hidden px2 py2 bg-light-gray"></div>
        </div>
      </li>
    </ol>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>